---
import BaseLayout from "../layouts/BaseLayout.astro";

const photos = [
  "photo1.jpg",
  "photo2.jpg",
  "photo3.jpg",
  "photo4.jpg",
  "photo5.jpg",
  "photo6.jpg"
];

// Ensure 9 items for a 3x3 grid
const totalSlots = 9;
const placeholdersNeeded = totalSlots - photos.length;
const galleryItems = [...photos, ...Array(placeholdersNeeded).fill(null)];
---

<BaseLayout title="Jimmy Krebsz">

  <h1 class="text-3xl mb-8 text-center font-semibold">Jimmy Krebsz</h1>

  <div class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    {galleryItems.map((src) => (
      <div class="relative w-full aspect-square overflow-hidden rounded-md bg-gray-200 flex items-center justify-center">
        {src ? (
          <img
            src={`/photos/${src}`}
            alt=""
            class="w-full h-full object-cover"
          />
        ) : (
          <span class="text-gray-500 text-lg">Coming Soon</span>
        )}
      </div>
    ))}
  </div>

</BaseLayout>
