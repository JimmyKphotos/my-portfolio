---
import BaseLayout from '../layouts/BaseLayout.astro';

// List your images here (just filenames in public/photos/)
const photos = [
  "photo1.jpg",
  "photo2.jpg",
  "photo3.jpg",
  "photo4.jpg",
  "photo5.jpg",
  "photo6.jpg"
];
---

<BaseLayout title="Jimmy Krebsz">
  <h1 class="text-2xl mb-4 text-center">Jimmy Krebsz</h1>

  <div class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
  {photos.map(src => (
    <div class="w-full aspect-square overflow-hidden rounded-sm">
      <img src={`/my-portfolio/photos/${src}`} alt="" class="w-full h-full object-cover" />
    </div>
  ))}
</div>

</BaseLayout>
