---
import BaseLayout from "../layouts/BaseLayout.astro";

const photos = [
  "photo1.jpg",
  "photo2.jpg",
  "photo3.jpg",
  "photo4.jpg",
  "photo5.jpg",
  "photo6.jpg"
];
---

<BaseLayout title="Jimmy Krebsz">
  <h1 class="text-3xl mb-8 text-center font-semibold">Jimmy Krebsz</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    {photos.map((src) => (
      <div class="overflow-hidden rounded-md aspect-[4/3]">
        <img src={`/photos/${src}`} alt="" class="w-full h-full object-cover" />
      </div>
    ))}
  </div>
</BaseLayout>
